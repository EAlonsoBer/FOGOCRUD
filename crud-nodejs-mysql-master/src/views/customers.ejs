<%- include("partials/_header") %>

<div class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <h3>Tabla genérica de productos sin nada espectacular pero jaladora</h3>
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr>
              <td>id</td>
              <td>Nombre</td>
              <td>Descripción</td>
              <td>Lote</td>
              <td>Acciones</td>
            </tr>
          </thead>
          <tbody>
            <% if (customers) { %> <% for(var i = 0; i < customers.length; i++) {
            %>
            <tr>
              <td><%= (i + 1) %></td>
              <td><%= customers[i].name %></td>
              <td><%= customers[i].address %></td>
              <td><%= customers[i].phone %></td>
              <td class="d-flex gap-2">
                <a href="/update/<%= customers[i].id %>" class="btn btn-info">
                  Editar
                </a>
                <a href="/delete/<%= customers[i].id %>" class="btn btn-danger">
                  Eliminar
                </a>
              </td>
            </tr>
            <% } %> <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-md-7">
        <div class="col-md-5">
          <div class="card-body">
            <form action="/add" method="POST" id="customer-form">
              <input type="text" name="name" placeholder="Nombre del producto" class="form-control mb-2" autofocus />
              <input type="text" name="address" placeholder="Descripción" class="form-control mb-2" />
              <input type="number" name="phone" placeholder="Lote" class="form-control mb-2" />
              <button type="submit" class="btn btn-info">Guardar datos</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>

<style>
  #customer-form {
    margin-top: 20px;
  }
</style>
